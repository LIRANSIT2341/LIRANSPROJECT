<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="10"
    android:background="#f4f4f4"
    tools:context=".screen.ItemxmlActivity">

    <!-- כותרת -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="פרטי פריט"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="20dp"
        android:layout_weight="1" />

    <!-- שם פריט -->

    <!-- סוג פריט -->
    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:text="שם הפריט"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvItemType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="סוג פריט"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_weight="1" />

    <!-- גודל פריט -->
    <TextView
        android:id="@+id/tvItemSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="גודל"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_weight="1" />

    <!-- צבע פריט -->
    <TextView
        android:id="@+id/tvItemColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="צבע"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_weight="1" />

    <!-- חומר/בד של פריט -->
    <TextView
        android:id="@+id/tvItemFabric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="חומר/בד"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_weight="1" />

    <!-- מחיר פריט -->
    <TextView
        android:id="@+id/tvItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מחיר"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_weight="1" />

    <!-- סטטוס פריט -->
    <TextView
        android:id="@+id/tvItemStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="סטטוס"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_weight="1" />

    <!-- שינוי לתמונה שלך -->

  


    <ImageView
        android:id="@+id/ivItemPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/liransshirt"
        />
    <!-- כפתור לשנות סטטוס -->
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="הוספה לסל"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="#4CAF50"
        android:padding="12dp"
        android:layout_weight="1" />



</LinearLayout>